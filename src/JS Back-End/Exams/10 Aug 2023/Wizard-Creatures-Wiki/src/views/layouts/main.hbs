        <div class="error-container">
            <p>{{errorMessage}}</p>
        </div>
        {{/if}}


        <nav>
            <!-- Do not forget to change the path to the image -->
            <img src="/img/logo.png" alt="logo">
            <ul class="menu">
                <li><a href="/">Home</a></li>
                <li><a href="/creatures/all">All Posts</a></li>
                {{#if isAuthenticated}}
                <li><a href="/creatures/create">Create Post</a></li>
                <li><a href="/users/my-profile">Profile</a></li>
                <li><a href="/users/logout">Logout</a></li>
                {{else}}
                <li><a href="/users/register">Register</a></li>
                <li><a href="/users/login">Login</a></li>
                {{/if}}
            </ul>
        </nav>
        {{{body}}}
